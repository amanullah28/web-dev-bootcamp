<% include ../partials/header %>
        
         <div class="row justify-content-center">
             <div class="col-md-12 text-center">
               <h1>Edit <%=cards.name%></h1> 
              </div>
             <div class="col-lg-4 col-md-6 col-xs-12 mt-2">
        <form action="/cards/<%= cards._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" value="<%=cards.name%>" name="card[name]">
            </div>
             <div class="form-group">
                    <input class="form-control" type="number" value="<%=cards.price%>" name="card[price]" min="0.01" step="0.01">
             </div>
            <div class="form-group">
                 <input class="form-control" type="text" value="<%=cards.image%>" name="card[image]">
            </div>
            
             <div class="form-group">
                 <textarea class="form-control" rows="4" cols="70" name="card[description]"><%=cards.description%></textarea>
              </div>
              
             <div class="form-group">
                 <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
               
        </form>
        <a href="/cards">Go BAck!!</a>
    </div>
</div>
        
        <% include ../partials/footer %>
