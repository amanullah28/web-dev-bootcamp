<!DOCTYPE html>
<html>
    <head>
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>YelpCamp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
 <nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand" href="/">YelpCamp</a>
        </div>

        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a href="/campgrounds">Home</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
              <% if(!currentUser){ %>
                  <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a href="/login">Login</a></li>
                  <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a href="/register">Sign Up</a></li>
              <% } else { %>
     <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"  aria-expanded="false"><img id="profile-nav-img" src="<%=currentUser.profileImage%>"><%=currentUser.username%> <span class="caret"></span></a>
          <ul id="menu" class="dropdown-menu">
            <div class="row">
              <div class="col-md-4">
                <img id="profile-img" src="<%=currentUser.profileImage%>">
              </div>
              <div class="col-md-8 ">
              <div id="name-grid">
                <h3><%=currentUser.firstName+" "+currentUser.lastName%></h3>
                <p><%=currentUser.email%><p/>
                </div>
                <a href="/users/<%=currentUser._id%>" class="btn btn-primary btn-sm btn-block" id="profile-btn">Profile</a>
                
            </div>
          </div>
            <li role="separator" class="divider"></li>
            <li><a href="/users/<%=currentUser._id%>/edit">Update Profile</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Change Password</a></li>
            <li role="seperator" class="divider"></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </li>
            
              <% } %>
          </ul>
        </div>
    </div>
</nav>

<div class="container">
<!--FLASH MESSAGE ALERTS-->
<div class="container">
    <%if(success && success.length>0){%>
    <div class="alert alert-success" role="alert">
       <h5><%=success%></h5>
    </div>
    <%}%>
    <%if(error && error.length>0){%>
    <div class="alert alert-danger" role="alert">
       <h5><%=error%></h5>
    </div>
    <%}%>
</div>






